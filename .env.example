# FinGoal AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fingoal_ai
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fingoal_ai
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=your_redirect_uri

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure

# N8N Configuration
# N8N_HOST=https://your-n8n-instance.com
# N8N_API_KEY=your_n8n_api_key
# Self-hosted n8n instance credentials
N8N_USER=
N8N_PASSWORD=
N8N_ENCRYPTION_KEY=your_encryption_key_here_32_characters_long

# LLM Provider Configuration (OpenAI/Grok)
OPENAI_API_KEY=your_openai_api_key
# OR
GROK_API_KEY=your_grok_api_key

# Future: Socket.io Server Configuration
SOCKET_IO_SERVER_URL=http://localhost:3001
SOCKET_IO_SECRET=your_socketio_secret

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=info

# Webhook URLs (will be generated after n8n workflow deployment)
LOGIN_WEBHOOK_URL=https://your-n8n-instance.com/webhook/login
ROUTER_WEBHOOK_URL=https://your-n8n-instance.com/webhook/router
PROFILE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/profile
DASHBOARD_WEBHOOK_URL=https://your-n8n-instance.com/webhook/dashboard
REFRESH_WEBHOOK_URL=https://your-n8n-instance.com/webhook/refresh

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
CORS_ORIGINS=https://your-app-domain.com

# Vietnamese Market Configuration
DEFAULT_CURRENCY=VND
DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
DEFAULT_LANGUAGE=vi

# Optional: External Service APIs (Future Use)
BANK_API_ENDPOINTS={}
MARKET_DATA_API_KEY=your_market_data_api_key
